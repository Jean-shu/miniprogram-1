/* pages/home/home.wxss */
.search-box{
    height: 100rpx;
    width: 100%;
    background-color: black;
    position: fixed;
}
.search{
    border-radius: 10rpx;
    position: fixed;
    background-color: white;
    height: 80rpx;
    width: 90%;
    margin-left: 5%;
}
.input{
    text-align: center;
    padding-top:15rpx;
}
.BigImg{
    padding-top: 100rpx; /*不能用margin*/
}
.nav{
    /*分成左右两块*/
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 140rpx;
    background-color: ghostwhite;
}
.nav-item1{
    width: 45%;
    margin-top: 15rpx;
    margin-bottom: 20rpx;
    display: flex;
    flex-direction: row;
    background-color:lightblue;
    margin-left: 20rpx;
    text-align: center;
    border-radius: 10rpx;
}
.nav-item2{
    width: 45%;
    margin-top: 15rpx;
    margin-bottom: 20rpx;
    display: flex;
    flex-direction: row;
    background-color: lightblue;
    margin-left:43rpx;
    text-align: center;
    border-radius: 10rpx;
}
.nav-img image{
    width: 70rpx;
    height: 70rpx;
    margin: 15rpx;
}
.text{
    margin: 20rpx;
    margin-left: 40rpx;
}
.big-size-text{
    text-align: center;
    font-size: 35rpx;
    font-weight: 800;
}
.small-size-text{
    font-size: 20rpx;
    color: gray;
}
.adv-head{
    display: flex;
    flex-direction: row;
    margin: 30rpx;
}
.adv-left{
    font-size: 30rpx;
    font-weight: 700;
    color: black;
    margin-left: 25rpx;
}
.adv-right{
    font-size:25rpx;
    color:gray;
    margin-left: 380rpx;
}
.adv-content{
    display: flex;
    flex-direction: row;
    margin: 30rpx auto;
}
.adv-content image{
    height:180rpx;
    width:180rpx;
    padding:12rpx;
}
.hr{
    background-color: gray;
    width: 98%;
    height: 6rpx;
    margin-left: 1%;
    opacity: 33%;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
}
.goodText{
    text-align: center;
    font-size: 50rpx;
    font-weight: 700;
    font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    margin-top: 15rpx;
    margin-bottom: 15rpx;
}
.goodThing{
    background-color: ghostwhite;
}
.item image{
    /*变型居中*/
    width: 97%;
    display: block;
    margin: 0 auto;
}
.title{
    font-size: 40rpx;
    font-weight: 700;
    margin: 25rpx 15rpx;
}
.count{
    font-size: 30rpx;
    display: flex;
    flex-direction: row;
    color: gray;
    padding-left: 18rpx;
}
.author{
    padding-right: 30rpx;
    display: flex;
    flex-direction: row;
}
.collectNumber{
    padding-right:30rpx;
    display: flex;
    flex-direction: row;
}
.browserNumber{
    padding-right: 30rpx;
    display: flex;
    flex-direction: row;
}
.content-hr{
    background-color: #000000;
    width: 98%;
    height: 3rpx;
    margin: 30rpx auto;
}